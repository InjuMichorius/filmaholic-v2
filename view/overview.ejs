<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./components/head') %>
        <title>Filmaholic | Ratings en Reviews</title>
</head>

<body>
    <header>
        <nav>
            <a href="#">Filmaholic</a>
            <form action="/search">
                <label for="find-movies" class="find-movies">Search</label>
                <input type="text" placeholder="Search movie.." id="find-movies" name="q">
            </form>
        </nav>
        <section>
            <div class="dropdown">
                <button class="dropbtn">Sort</button>
                <div class="dropdown-content">
                    <form action="/sortData" method="POST">

                        <input type="radio" value="alphabetical" name="sort" id="alphabetical">
                        <label for="alphabetical">Alphabetical</label>
                        
                        <input type="radio" value="vote-average" name="sort" id="vote-average">
                        <label for="vote-average">Votes</label>

                        <input type="radio" value="release-date" name="sort" id="release-date">
                        <label for="release-date">Date</label>

                        <input type="submit" value="Sort movies">
                    </form>
                </div>
            </div>
        </section>
    </header>

    <!-- HTML gets rendered here -->
    <main id="movie-template">
        <% movies.forEach(function(movie) { %>
            <article class="movie">
                <a href="<%= movie.id %>">
                    <img src="https://image.tmdb.org/t/p/w200/<%= movie.poster_path %>"
                        alt="Cover of <%= movie.title %>" width="224" height="336" background-color="#333">
                    <p class="movie-title">
                        <%= movie.title %>
                    </p>
                    <p>
                        <%= movie.release_date %>
                    </p>
                    <p>
                        <%= movie.vote_average %>
                    </p>
                </a>
            </article>
            <% }) %>

    </main>
</body>

</html>